    let &colorcolumn=join(range(91,999), ',') " Show different color aftter line 90
    colorscheme gruvbox
    hi CursorLine  guibg='#202020'
    hi ColorColumn guibg='#303030'

else

    " generalÂ» vim-onlyÂ» flagsÂ»
    colorscheme noctu " Set the color scheme

