" generalÂ» flagsÂ»
syntax on          " Enable color syntax for known files
set nospell        " Disable spelling checking
set title          " Vim will set the terminal title
set magic          " Enables regex magic, no need for backslashes in some cases.
set showcmd        " Shows the last command entered
set wildmenu       " Enables extended features for completion
set autoread       " Detect when a file has changed
set hidden         " bufferÂ» Dont unload buffer when closed
set showmatch      " show match on parenthesis and curly braces
set writebackup    " â€¦ unless you're currently editing.
set number         " linesÂ» Enable line numbers
set relativenumber " linesÂ» Enable relative line numbering
set nowrap         " linesÂ» Disable line wrapping
set incsearch      " searchÂ» Search as you type
set hlsearch       " searchÂ» Highlight search results
set ignorecase     " searchÂ» Ignore case when searchingâ€¦
set smartcase      " searchÂ» â€¦ but not when an uppercase letter is present
set gdefault       " searchÂ» Assume always /g on replacements
set autoindent     " indentÂ» Enable auto indentation
set smartindent    " indentÂ» Determine indentation level automatically
set expandtab      " indentÂ» Inserts spaces rather than tabs
set smarttab       " indentÂ» tab respects 'tabstop' 'shiftwidth' and 'softtabstop'
set shiftround     " indentÂ» round indent to a multiple of 'shiftwidth'
set cursorline     " Show the current line
set cursorcolumn   " Show the current column
set splitbelow     " Open splits below instead of above
set splitright     " Open slits right instead of above
set backup         " Enable backup file crea
set swapfile       " Enable swapfile creation
set undofile       " Enable undo management

" generalÂ» settingsÂ»
set synmaxcol=200                    " Only render syntax for first 200 cols
set background=dark                  " Use default colors for dark background
set wildmode=list:longest            " autocomplete until longest word is filled
set diffopt=vertical,filler          " Define window behaviour for diffs (horizontal split)
set grepprg=ag                       " searchÂ» Use the_silver_searcher insteand of grep
set directory=$HOME/.vim/cache/swap/ " cacheÂ» Set dir for swapfiles
set backupdir=$HOME/.vim/cache/back/ " cacheÂ» Set dir for backups
set undodir=$HOME/.vim/cache/undo/   " cacheÂ» Set dir for undos
set updatetime=50                    " gitÂ» lower the time it takes to update gitgutter
set scrolloff=9999                   " bufferÂ» Always maintain n lines of context
set history=1000                     " bufferÂ» Control the history length
set textwidth=100                    " bufferÂ» maximum length of a line
set colorcolumn=90                   " bufferÂ» draws a bar on given line
set laststatus=2                     " bufferÂ» draws a status bar on the bottom
set foldcolumn=2                     " gutterÂ» Makes the gutter a little wider
set numberwidth=4                    " gutterÂ» Sets the width of the line numbering column
set backspace=indent,eol,start       " indentÂ» Make backspace behave the way you expect
set tabstop=8                        " indentÂ» Set tab length
set softtabstop=0                    " indentÂ» Force softtabbing
set shiftwidth=4                     " indentÂ» How many cols to indent on reindent
set clipboard^=unnamed               " system-wide clipboard supprt
set listchars=tab:â–¸-,space:Â·,eol:Â¬,trail:Â·,nbsp:Ã—,extends:â¯,precedes:â® " Invisibles

" generalÂ» varsÂ»
let mapleader=' '      " Use space as <Leader> key for plugins namespace
let &t_SI="\<Esc>[5 q" " CursorÂ» blink pipe on Insert
let &t_SR="\<Esc>[3 q" " CursorÂ» blink underline on Replace
let &t_EI="\<Esc>[2 q" " Cursor> restore on exit modes

if has('nvim')

    " generalÂ» nvim-onlyÂ» flagsÂ»
    let $NVIM_TUI_ENABLE_TRUE_COLOR=1   " Enable 24bit colors when supported
    let $NVIM_TUI_ENABLE_CURSOR_SHAPE=1 " Change the cursor when entering insert mode
